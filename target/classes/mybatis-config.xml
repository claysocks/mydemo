<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
    <!--配置数据源 ，交给spring去做    -->
    <!--取别名    -->
    <typeAliases>
        <package name="com.shilei.doming"/>
    </typeAliases>
    <!--绑定mapper语句文件    -->
    <mappers>
        <!--        当BookMapper 和 BookMapper.xml 名字不一样时使用resource，一样就用class-->
        <mapper class="com.shilei.dao.BookMapper"/>
    </mappers>
</configuration>